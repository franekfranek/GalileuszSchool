@model IEnumerable<Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<h1>Teachers</h1>

<p>
    <a href="#createTeacherModal" class="btn btn-primary" data-toggle="modal">
        <span>New teacher</span>
    </a>
</p>
<table id="teachersTable" >
    <thead>
        <tr>

            <th>
                First name
            </th>

            <th>
                Last name
            </th>

            <th>
                Phone number
            </th>

            <th>

            </th>

            <th>

            </th>
            
        </tr>
    </thead>
    <tbody>
 </table>



@*---------------->CREATE TEACHER MODAL------------*@
<div id="createTeacherModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" name="create-new-teacher" id="create-teacher-form">
                <div class="modal-header">
                    <h4 class="modal-title">Create new teacher</h4>
                    <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">
                        &times;
                    </button>
                </div>

                <div class="modal-body">

                    <div class="form-group">
                        <label>First name</label>
                        <input type="text" class="form-control" name="FirstName" id="teacherFirstName" />
                    </div>
                    
                    <div class="form-group">
                        <label>Last name</label>
                        <input type="text" class="form-control" name="LastName" id="teacherLastName" />
                    </div>

                    <div class="form-group">
                        <label>Phone number</label>
                        <input type="text" class="form-control" name="PhoneNumber" />
                    </div>

                </div>

                <div class="modal-footer">
                    <input type="button" value="Cancel" class="btn btn-default" data-dismiss="modal">
                    <input type="submit" value="Add" class="btn btn-success" id="createTeacher">
                </div>

            </form>
        </div>
    </div>
</div>


@*---------------->EDIT TEACHER MODAL------------*@
<div id="editTeacherModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" name="edit-teacher" asp-controller="Teacher" asp-action="Edit" id="editTeacherForm">
                <div class="modal-header">
                    <h4 class="modal-title">Edit teacher</h4>
                    <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">
                        &times;
                    </button>
                </div>


                <div class="modal-body">

                    <div class="form-group">
                        <label>First name</label>
                        <input type="text" class="form-control" name="FirstName" id="editTeacherFirstName" />
                    </div>

                    <div class="form-group">
                        <label>Last name</label>
                        <input type="text" class="form-control" name="LastName" id="editTeacherLastName" />
                    </div>

                    <div class="form-group">
                        <label>Phone number</label>
                        <input type="text" class="form-control" name="PhoneNumber" id="editTeacherPhone" />
                    </div>


                </div>

                <div class="modal-footer">
                    <input type="button" value="Cancel" class="btn btn-default" data-dismiss="modal">
                    <input type="submit" value="Update" class="btn btn-success" id="editTeacherPost">

                    <input type="hidden" name="id" id="idTeacherEdit" />
                </div>

            </form>
        </div>
    </div>
</div>

@*---------------->DELETE TEACHER MODAL------------*@
<div id="deleteTeacherModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-controller="Teachers" asp-action="Delete">
                <div class="modal-header">
                    <h4 class="modal-title" id="deleteModalTitle"></h4>
                    <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">
                        &times;
                    </button>
                </div>

                <div class="modal-body">
                    <p>Do you really want to remove this teacher?</p>
                    <p class="text=warning"><small>This action cannot be undone.</small></p>
                </div>

                <div class="modal-footer">
                    <input type="button" value="Cancel" class="btn btn-default" data-dismiss="modal">
                    <input type="submit" value="Delete" class="btn btn-danger" id="deleteTeacher">

                    <input type="hidden" name="id" id="deleteTeacherId" />
                    <input type="hidden" name="teacherName" id="deleteTeacherName" />
                    <input type="hidden" name="teacherLastName" id="deleteTeacherLastName" />
                </div>

            </form>

        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/teacherIndex.js"></script>

}