@model RoleEdit

@{
    ViewData["Title"] = "Edit roles";
}

<h1>Edit roles</h1>

<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="RoleName" value="@Model.Role.Name" />

            <div class="row">
                <div class="col-6">

                    <h2>Add users to <span class="badge badge-primary">@Model.Role.Name</span> role</h2>
                    <table class="table table-bordered">
                        @if (Model.NonMemmbers.Count() == 0)
                        {
                            <tr><td>No user are members</td></tr>
                        }
                        else
                        {
                            foreach (AppUser user in Model.NonMemmbers)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>
                                        <input type="checkbox" value="@user.Id" name="AddIds" />
                                    </td>
                                </tr>

                            }
                        }
                    </table>
                </div> 
                <div class="col-6">
                    <h2>Remove users from <span class="badge badge-primary">@Model.Role.Name</span> role</h2>
                    <table class="table table-bordered">
                        @if (Model.Memmbers.Count() == 0)
                        {
                            <tr><td>No user are members</td></tr>
                        }
                        else
                        {
                            foreach (AppUser user in Model.Memmbers)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>
                                        <input type="checkbox" value="@user.Id" name="DeleteIds" />
                                    </td>
                                </tr>

                            }
                        }
                    </table>
                </div>

                </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

