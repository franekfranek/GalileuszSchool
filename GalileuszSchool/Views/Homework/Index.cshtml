<!-- Homework grid -->
<table class="mails">
    <thead><tr><th>Title</th><th>Submitted by Student</th>
        <th>Creation Date</th><th>Teacher</th></tr></thead>
    <tbody data-bind="foreach: homeworks">
        <tr>
            <td data-bind="text: Title"></td>
            <td data-bind="text: IsDone"></td>
            <td data-bind="text: CreationDate"></td>
            <td data-bind="text: TeacherName"></td>
        </tr>
    </tbody>
</table>




@section Scripts{
    <script src="~/js/homeworkIndex.js"></script>
    <script>
        document.getElementById('inputFile')
            .addEventListener('change', function () {

                var fr = new FileReader();
                fr.onload = function () {
                    document.getElementById('homeworkContent')
                        .innerHTML = fr.result;
                }

                fr.readAsText(this.files[0]);
            })
    </script>

